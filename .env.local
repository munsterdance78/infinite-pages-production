# =====================================================
# INFINITE-PAGES V2.0 PRODUCTION CONFIGURATION
# =====================================================

# Production site URL
NEXT_PUBLIC_SITE_URL=https://www.infinite-pages.com

# =====================================================
# SENTRY ERROR MONITORING
# =====================================================
# Get these from https://sentry.io/settings/infinite-pages/projects/infinite-pages-v2/keys/
# NEXT_PUBLIC_SENTRY_DSN=https://your-dsn-here@sentry.io/project-id
# SENTRY_DSN=https://your-dsn-here@sentry.io/project-id
# SENTRY_ORG=infinite-pages
# SENTRY_PROJECT=infinite-pages-v2

# =====================================================
# CORE SFSL FEATURES
# =====================================================

ENABLE_FACT_EXTRACTION=true
ENABLE_HIERARCHICAL_CACHE=true

# =====================================================
# WORKFLOW FEATURES
# =====================================================

ENABLE_THREE_PHASE_WORKFLOW=true

# =====================================================
# CONTENT GENERATION FEATURES
# =====================================================

ENABLE_CHARACTER_GENERATION=true
ENABLE_WORLD_BUILDER=true

# =====================================================
# ADVANCED FEATURES
# =====================================================

ENABLE_TIMELINE_VISUALIZATION=true
ENABLE_SERIES_MANAGEMENT=true

# =====================================================
# ANALYTICS & MONITORING
# =====================================================

ENABLE_ANALYTICS_V2=true
ENABLE_PERFORMANCE_MONITORING=true

# =====================================================
# PERFORMANCE FEATURES
# =====================================================

ENABLE_ADVANCED_CACHING=true

# =====================================================
# FEATURE LIMITS
# =====================================================

MAX_FACTS_PER_EXTRACTION=50
MAX_CACHE_ENTRIES=1000
MAX_WORKFLOW_DURATION_MS=300000
MAX_CHARACTERS_PER_STORY=25
MAX_TIMELINE_EVENTS=100

# =====================================================
# PRODUCTION ROLLOUT - ALL FEATURES ENABLED
# =====================================================

FACT_EXTRACTION_ROLLOUT_PERCENTAGE=100
HIERARCHICAL_CACHE_ROLLOUT_PERCENTAGE=100
THREE_PHASE_WORKFLOW_ROLLOUT_PERCENTAGE=100
CHARACTER_GENERATION_ROLLOUT_PERCENTAGE=100
WORLD_BUILDER_ROLLOUT_PERCENTAGE=100
TIMELINE_VISUALIZATION_ROLLOUT_PERCENTAGE=100
SERIES_MANAGEMENT_ROLLOUT_PERCENTAGE=100
ANALYTICS_V2_ROLLOUT_PERCENTAGE=100
PERFORMANCE_MONITORING_ROLLOUT_PERCENTAGE=100
ADVANCED_CACHING_ROLLOUT_PERCENTAGE=100